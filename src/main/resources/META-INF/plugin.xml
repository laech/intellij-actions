<idea-plugin>
    <id>com.gitlab.lae.intellij.actions</id>
    <name>Actions</name>
    <version>0.1</version>
    <vendor>Lae</vendor>
    <description>Editor actions.</description>

    <!-- http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html -->
    <idea-version since-build="181"/>

    <!-- http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>

        <action id="com.gitlab.lae.intellij.actions.UpcaseRegionOrToWordEnd"
                class="com.gitlab.lae.intellij.actions.UpcaseRegionOrToWordEnd"
                text="Upcase Region or to Word End"/>

        <action id="com.gitlab.lae.intellij.actions.DowncaseRegionOrToWordEnd"
                class="com.gitlab.lae.intellij.actions.DowncaseRegionOrToWordEnd"
                text="Downcase Region or to Word End"/>

        <action id="com.gitlab.lae.intellij.actions.CapitalizeRegionOrToWordEnd"
                class="com.gitlab.lae.intellij.actions.CapitalizeRegionOrToWordEnd"
                text="Capitalized Region or to Word End"/>

        <action id="com.gitlab.lae.intellij.actions.CreateRectangularSelectionFromMultiLineSelection"
                class="com.gitlab.lae.intellij.actions.CreateRectangularSelectionFromMultiLineSelection"
                text="Create Rectangular Selection from Multiline Selection"
                description="Create a rectangular selection between the start and end position of the current multiline selection"/>
    </actions>

</idea-plugin>
